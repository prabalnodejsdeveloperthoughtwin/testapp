<body class="theme-red">
      
 


          
            
            <!-- Basic Table -->
            <div class="container">
                  
                <form  class="form-horizontal" role="form" >
                           <div class="row"> 
                            <div class="col-sm-6 clearfix">
                                <label>amount</label>
                                <input type="number" name='amount' class="form-control " id ="amounts" placeholder="amount" tabIndex="1" autofocus >
                            </div>
                            <select id="volume">

                                <option  value="INR">INR</option>
                                <option value="USD">USD</option>
                              
                              </select>
                           
                        </div>
