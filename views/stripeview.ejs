                            <!-- <div class="checkbox">
                                <label class="pull-right">
                                    <a href="#">Forgotten Password?</a>
                                </label>
                            </div> -->
                            <div class="row">
                            <button type="button" tabIndex="6" id="stripepaybtn" class="btn btn-success">submit</button>

                        </div>

                             
                            
                        </form>
                        <script type="text/javascript">
                            $(document).on('keypress', 'input,select', function (e) {
                                if (e.which == 13) {
                                    e.preventDefault();
                                    var $next = $('[tabIndex=' + (+this.tabIndex + 1) + ']');
                                    console.log($next.length);
                                    if (!$next.length) {
                                   $next = $('[tabIndex=1]');        }
                                    $next.focus() .click();
                                }
                            });
                            </script>
            
            </div>
